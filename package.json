{
  "name": "talenthive",
  "version": "1.0.0",
  "description": "Comprehensive freelancing platform built with MERN stack",
  "main": "server/dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "server:build": "cd server && npm run build",
    "client:build": "cd client && npm run build",
    "build": "npm run server:build && npm run client:build",
    "start": "cd server && npm start",
    "test": "npm run server:test && npm run client:test",
    "server:test": "cd server && npm test",
    "client:test": "cd client && npm test",
    "lint": "npm run server:lint && npm run client:lint",
    "server:lint": "cd server && npm run lint",
    "client:lint": "cd client && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky install",
    "seed": "cd server && npm run seed",
    "seed:dev": "cd server && npm run seed:dev",
    "seed:demo": "cd server && npm run seed:demo",
    "seed:testing": "cd server && npm run seed:testing",
    "seed:status": "cd server && npm run seed:status",
    "seed:clean": "cd server && npm run seed:clean",
    "seed:quality": "cd server && npm run seed:quality",
    "validate-data": "cd server && npm run validate-data",
    "validate-data:check": "cd server && npm run validate-data:check",
    "validate-data:fix": "cd server && npm run validate-data:fix",
    "validate-data:stats": "cd server && npm run validate-data:stats"
  },
  "keywords": [
    "freelancing",
    "platform",
    "mern",
    "typescript",
    "react",
    "nodejs"
  ],
  "author": "TalentHive Team",
  "license": "MIT",
  "devDependencies": {
    "axios": "^1.13.2",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "tsconfig-paths": "^4.2.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
